mixin listItem ( className = [], classNameLink, ...items )
  each item in items
    li(class= className)
      if(item.text)
        a(class= classNameLink, href= item.href)= item.text

mixin picture ( className, imgName, alt, width, height )
  picture
    source(type='image/webp' srcset=`images/${imgName}.webp 1x, images/${imgName}@2x.webp 2x`)
    img(class=className loading='lazy' src=`images/${imgName}.png` srcset=`images/${imgName}@2x.png 2x` alt=`${alt}` width=`${width}` height=`${height}`)

